<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
<% end %>


<h1>Books</h1>
<br>

<table width="600">
	<tr>
		<th>Title</th>
		<th>Body</th>
    <th>Genre</th>
	</tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= book.genre.name %></td>
<td><%= link_to "Show",book_path(book) %></td>
<td><%= link_to "Edit",edit_book_path(book) %></td>
<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
</tr>
<% end %>
</table>


<br>


<h3>New book</h3>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>
  
  <h5>Genre</h5>
  <%= collection_select(:genre, :name, @genres, :id, :name) %>
  <%= f.submit 'Create' %>
<% end %>
