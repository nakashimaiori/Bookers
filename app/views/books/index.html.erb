<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
<% end %>


<h2>Books</h2>
<br>

<table width="600">
	<tr>
		<th>Title</th>
		<th>Body</th>
	</tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "show",book_path(book) %></td>
<td><%= link_to "edit",edit_book_path(book) %></td>
<td><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
</tr>
<% end %>
</table>


<br>
