

<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
  	  <div id="error_explanation" class="alert alert-danger">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
       </div>
<% end %>

  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
<% end %>

<ul>
	<li><p><%= link_to "show",book_path(@book) %></p></li>
	<li>|</li>
	<li><%= link_to "back",books_path %></li>
</ul>
